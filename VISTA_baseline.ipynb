#VISTA config
import os
from dataclasses import dataclass, field
from typing import List

@dataclass
class VISTAConfig:
    #data
    tickers: List[str] = field(default_factory=lambda: [
        'SPY', 'QQQ', 'AAPL', 'TSLA', 'NVDA',
        'AMD', 'META', 'MSFT', 'AMZN', 'GOOGL'
    ])
    interval: str = '1d' #'1d', '1h', '15m' â€” paper trade on daily first
    period: str = '2y' #how much history to pull
    train_split: float = 0.7
    val_split: float = 0.15 #remaining 0.15 = test set

    #chart rendering
    chart_window: int = 60 #candles per chart image
    image_size: int = 224  #px (EfficientNet default)
    chart_style: str = 'charles' #mplfinance style
    charts_dir: str = './charts' #where rendered PNGs are saved

    #labels
    forward_periods: int = 5 #predict return N bars ahead
    label_threshold: float = 0.015 #+1.5% = bullish, -1.5% = bearish, else neutral

    #model
    backbone: str = 'efficientnet_b3' #timm model name
    num_classes: int = 3 #[bearish, neutral, bullish]
    dropout: float = 0.3
    freeze_backbone_epochs: int = 3 #freeze backbone, train head first

    #training
    batch_size: int = 32
    epochs: int = 20
    learning_rate: float = 1e-4
    weight_decay: float = 1e-4
    seed: int = 42

    #platform adaptation
    #used by the multi-platform domain adapter
    platforms: List[str] = field(default_factory=lambda: [
        'webull', 'paper_alpaca', 'prop_topstep'
    ])
    current_platform: str = 'paper_alpaca'  #change when switching environments but also need to confirm which prop firm i'm using/prop trading plat.

cfg = VISTAConfig()
os.makedirs(cfg.charts_dir, exist_ok=True)
print(f'VISTA Config loaded | Tickers: {len(cfg.tickers)} | Platform: {cfg.current_platform}')
